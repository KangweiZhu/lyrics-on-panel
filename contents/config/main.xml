<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0 http://www.kde.org/standards/kcfg/1.0/kcfg.xsd">
    <kcfgfile name=""/>

    <group name="General">
        <entry name="yesPlayMusicChecked" type="Bool">
            <default>false</default>
        </entry>
        <entry name="spotifyChecked" type="Bool">
            <default>true</default>
        </entry>
        <entry name="compatibleModeChecked" type="Bool">
            <default>false</default>
        </entry>
        <entry name="lyricTextSize" type="Int">
            <default>13</default>
        </entry>
        <entry name="lyricTextColor" type="Color">
            <default>PlasmaCore.Theme.textColor</default>
        </entry>
        <entry name="lyricTextBold" type="Bool">
            <default>true</default>
        </entry>
        <entry name="lyricTextItalic" type="Bool">
            <default>false</default>
        </entry>
        <entry name="mediaControllSpacing" type="Int"> 
            <default>10</default>
        </entry>
        <entry name="mediaControllItemSize" type="Int">
            <default>15</default>
        </entry>
        <entry name="mediaControllItemVerticalOffset" type="Int">
            <default>1</default>
        </entry>
        <entry name="lyricTextVerticalOffset" type="Int">
            <default>0</default>
        </entry>
        <entry name="whiteMediaControlIconsChecked" type="Bool">
            <default>false</default>
        </entry>
        <entry name="preferedWidgetWidth" type="String">
            <default>550</default>
        </entry>
        <entry name="hideItemWhenNoControlChecked" type="Bool">
            <default>true</default>
        </entry>
    </group>

    <!-- <group name="Notification">
        <entry name="compatibleModeRadioButton" type="Bool">
            <default>false</default>
        </entry>
    </group> -->
</kcfg>
